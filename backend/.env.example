# ===========================================
# PriceHound Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ------------------------------------------
# Datadog Telemetry (Optional)
# ------------------------------------------
# Set these to enable APM tracing and log shipping to Datadog
# Without DD_API_KEY, the app runs normally but no data is sent to Datadog

# Your Datadog API key (required for telemetry)
DD_API_KEY=

# Datadog site/region (default: datadoghq.com)
# Options: datadoghq.com, datadoghq.eu, us3.datadoghq.com, us5.datadoghq.com, ap1.datadoghq.com
DD_SITE=datadoghq.com

# Service metadata for APM
DD_SERVICE=pricehound
DD_ENV=development
DD_VERSION=1.0.0

# ------------------------------------------
# Storage Configuration (Optional)
# ------------------------------------------
# Redis URL for production storage (optional, falls back to file storage)
# REDIS_URL=redis://localhost:6379

# Storage type: 'redis' or 'file' (default: file)
# STORAGE_TYPE=file
